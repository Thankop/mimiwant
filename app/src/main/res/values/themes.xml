<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Yailek" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/accent_brown</item>
        <item name="colorSecondaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Default background -->
        <item name="android:windowBackground">@color/cream_bg</item>

    </style>

    <style name="Theme.Yailek" parent="Base.Theme.Yailek" />

    <style name="ShapeAppearance.App.SmallComponent"
        parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
